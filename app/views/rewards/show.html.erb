<%= render 'shared/header', header_title: @reward.name %>
<div class="max-w-7xl mx-auto p-4 sm:px-6 md:px-8">
  <div class="mt-2 grid grid-cols-1 gap-5 sm:grid-cols-2 lg:grid-cols-3">
    <%= render partial: 'shared/card', locals: {
      title: 'Rules',
      subtitle: @reward.rules.count,
      view_link: rules_url(reward_id: @reward.uuid),
      view_text: 'View all'
    } %>
    <%= render partial: 'shared/card', locals: {
      title: 'Achievements',
      subtitle: @reward.achievements.count,
      view_link: achievements_url(reward_id: @reward.uuid),
      view_text: 'View all'
    } %>
  </div>
</div>
